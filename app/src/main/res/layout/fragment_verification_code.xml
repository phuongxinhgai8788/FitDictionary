<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification_code_screen.VerificationCodeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
    <TextView
        android:id="@+id/confirm_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/confirm_code"
        android:textColor="#6A6767"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_gradient"
        app:layout_constraintTop_toBottomOf="@+id/confirm_code_tv"
        tools:layout_editor_absoluteX="70dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_code_was_sent"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:layout_marginTop="40dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verification_code_was_sent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/verification_code_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="@string/confirm_code"
            android:inputType="number"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/verification_code_et"
        app:layout_constraintTop_toBottomOf="@id/verification_code_et"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:id="@+id/alert_confirm_code"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="15dp"
                android:id="@+id/count_constraint_confirm_code"
                android:background="@drawable/background_gradient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verification_code_et"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/count_tv_confirm_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_password_space_confirm_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:passwordToggleEnabled="false"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_constraint_confirm_code">

        <EditText
            android:id="@+id/new_password_et_confirm_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/background"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/see_new_pass_confirm_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/see_new_pass_confirm_code"
            android:paddingRight="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/new_password_space_confirm_code"
        app:layout_constraintTop_toBottomOf="@id/new_password_space_confirm_code"
        app:layout_constraintEnd_toEndOf="@+id/new_password_space_confirm_code"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:id="@+id/alert_new_password"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_password_space_confirm_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:passwordToggleEnabled="false"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_space_confirm_code">

        <EditText
            android:id="@+id/confirm_password_et_confirm_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="@string/confirm_new_password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/see_confirm_pass_confirm_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/see_confirm_pass_confirm_code"
            android:paddingRight="10dp"
            android:backgroundTint="@color/cardview_dark_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_space_confirm_code"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_space_confirm_code"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password_space_confirm_code"
        android:layout_marginTop="10dp"
        android:id="@+id/alert_confirm_password"
        android:textColor="@color/red"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ok_bar_confirm_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_button"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_confirm_password">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ok_tv"
                android:text="@string/ok"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>